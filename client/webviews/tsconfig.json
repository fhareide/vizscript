{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ES2023",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "types": ["svelte", "vite/client"],
    "skipLibCheck": true,
    "verbatimModuleSyntax": true,
    "strict": true,
    "noEmit": true
  },
  "include": [
    "./components/**/*.ts",
    "./components/**/*.svelte",
    "./pages/**/*.ts",
    "./svelte.d.ts",
    "./globals.d.ts"
  ]
}
